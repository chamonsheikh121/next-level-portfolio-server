model BlogCategory {
  id    Int    @id @default(autoincrement())
  title String
  blogs Blog[]
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  categoryId  Int
  category    BlogCategory @relation(fields: [categoryId], references: [id])
  blocks      Json      // Editor.js output
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
