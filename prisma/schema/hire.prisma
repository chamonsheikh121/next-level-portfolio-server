model HireRequest {
  id               Int               @id @default(autoincrement())
  name             String?
  companyName      String?
  email            String?
  linkedinUrl      String?
  notes            String?
  status           HireRequestStatus @default(inprocess)
  projectDesc      String?
  budget           String?
  timeline         String?
  additionalinfo   String?
  serviceId        Int?
  estimateBudget   String?
  expectedTimeline String?
  coreFeatures     String[]
  techSuggestion   String[]
  files            FileDocument[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

enum HireRequestStatus {
  inprocess
  unread
  read
  archived
}
